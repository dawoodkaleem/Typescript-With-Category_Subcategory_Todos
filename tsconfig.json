{
  "compilerOptions": {
    "target": "ES2020",           // ← Use ES2020 or later
    "module": "ES2020",           // ← Use native ES modules
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}